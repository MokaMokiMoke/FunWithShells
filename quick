## Samba Configuration
# Samba User hinzufügen
sudo smbpasswd -a username
# Samba Freigabe einrichten
[freigabename]
comment = Kommentar-zur-Freigabe
path = /pfad/zurm/Ziel
read only = no
writeable = yes
browseable = yes
create mask = 0777
directory mask = 0777

